<div class="row" ng-controller="luntangController" modelurl="~/api/ApiLuntang/">
    <div class="col-md-3">
        <div class="panel panel-primary" ng-repeat="group in groups">
            <div class="panel-heading">
                <h3 class="panel-title">{{group.title}}</h3>
            </div>
            <div ng-repeat="item in group.topics">
                <a href="#" class="list-group-item list-group-item-success" ng-click="fetchArticleById(item.index)"><span class="badge">{{item.index}}</span>{{item.title}}</a>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        @*<h3><span id="artSubject"></span></h3>*@
        <article id="artContent" class="topic"></article>
        <div ng-repeat="item in follows">
            <div class="row well">
                <div class="col-md-2">
                    {{item.userId}}<br>
                    {{item.userName}}<br>
                    {{item.followDate}}<br>
                </div>
                <div class="col-md-10">
                    {{item.content}}
                </div>
            </div>
        </div>
    </div>
</div>
